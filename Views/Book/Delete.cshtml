@model moment3.Models.BookModel

@{
    ViewData["Title"] = "Ta bort bok";
}

<h2 class="mb-4 text-center text-danger">Ta bort bok</h2>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg p-4 border-danger">
            <div class="card-body">
                <div class="alert alert-danger text-center">
                    <h5>Är du säker på att du vill ta bort boken?</h5>
                    <p>Denna åtgärd kan inte ångras.</p>
                </div>

                <div class="mb-3">
                    <h6 class="fw-bold">Titel:</h6>
                    <p class="text-muted">@Model.Title</p>
                </div>

                <div class="mb-3">
                    <h6 class="fw-bold">Författare:</h6>
                    <p class="text-muted">@Model.AuthorName</p>
                </div>

                <div class="mb-3">
                    <h6 class="fw-bold">Publiceringsår:</h6>
                    <p class="text-muted">@Model.PublishedYear</p>
                </div>

                <div class="mb-3">
                    <h6 class="fw-bold">Beskrivning:</h6>
                    <p class="text-muted">@Model.Description</p>
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-danger">Ta bort</button>
                        <a asp-action="Index" class="btn btn-secondary">Avbryt</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>