@model moment3.Models.AuthorModel

@{
    ViewData["Title"] = "Detaljer";
}

<h2 class="mb-4 text-center">Författardetaljer</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg p-4">
            <div class="card-body">

                <div class="mb-3">
                    <h6 class="fw-bold">Namn:</h6>
                    <p class="text-muted">@Model.Name</p>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Redigera</a>
                    <a asp-action="Index" class="btn btn-secondary">Tillbaka till författarlistan</a>
                </div>
            </div>
        </div>
    </div>
</div>